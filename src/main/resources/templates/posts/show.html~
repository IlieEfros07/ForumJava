<body>
<div layout:fragment="content">
    <!-- Post Header -->
    <header class="post-header">
        <div class="container">
            <div class="post-container">
                <h1 class="post-title" th:text="${post.title}">Post Title</h1>
                <div class="post-meta">
                    <div class="meta-item">
                        <div class="author-avatar" th:text="${#strings.substring(post.author?.username ?: 'A', 0, 1)}">A</div>
                        <div>
                            <a href="#" class="author-name" th:text="${post.author?.username ?: 'Anonymous'}"
                               th:href="@{/users/{username}(username=${post.author?.username})}">Author</a>
                        </div>
                    </div>
                    <div class="meta-item">
                        <span th:text="${#temporals.format(post.createdAt, 'MMMM dd, yyyy')}">Date</span>
                    </div>
                    <div class="meta-item" th:if="${post.updatedAt != null and post.updatedAt != post.createdAt}">
                        <span>Updated: <span th:text="${#temporals.format(post.updatedAt, 'MMMM dd, yyyy')}">Updated Date</span></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="post-container">
            <!-- Post Content -->
            <article class="post-content">
                <div th:utext="${post.content}">
                    <p>Post content goes here...</p>
                </div>
            </article>

            <div class="post-actions">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="#comments" class="action-button">
                            Comments (<span th:text="${post.comments != null ? post.comments.size() : 0}">0</span>)
                        </a>
                    </div>
                </div>

                <!-- Share Buttons -->
                <div class="share-buttons">
                    <a href="#" class="share-btn twitter" onclick="shareOnTwitter()">
                        Twitter
                    </a>
                    <a href="#" class="share-btn facebook" onclick="shareOnFacebook()">
                        Facebook
                    </a>
                    <a href="#" class="share-btn linkedin" onclick="shareOnLinkedIn()">
                        LinkedIn
                    </a>
                    <button class="share-btn copy" onclick="copyToClipboard()">
                        Copy Link
                    </button>
                </div>
            </div>

            <!-- Comments Section -->
            <section class="comments-section" id="comments">
                <div class="comments-header">
                    <h3>Comments (<span th:text="${post.comments != null ? post.comments.size() : 0}">0</span>)</h3>
                </div>

                <!-- Comment Form -->
                <form class="comment-form" th:action="@{/posts/{id}/comment(id=${post.id})}" method="post">
                    <h5 class="mb-3">Leave a Comment</h5>
                    <div class="mb-3">
                        <textarea class="form-control" name="content" rows="4"
                                  placeholder="Share your thoughts..." required></textarea>
                    </div>
                    <button type="submit" class="action-button">
                        Post Comment
                    </button>
                </form>

                <!-- Comments List -->
                <div th:if="${post.comments != null and !post.comments.isEmpty()}">
                    <div class="comment" th:each="comment : ${post.comments}">
                        <div class="comment-author" th:text="${comment.author?.username ?: 'Anonymous'}">Author</div>
                        <div class="comment-date" th:text="${#temporals.format(comment.createdAt, 'MMM dd, yyyy at HH:mm')}">Date</div>
                        <div class="comment-content" th:text="${comment.content}">Comment content</div>
                    </div>
                </div>

                <div th:if="${post.comments == null or post.comments.isEmpty()}" class="text-center py-4 text-muted">
                    <p>No comments yet. Be the first to share your thoughts!</p>
                </div>
            </section>

            <!-- Related Posts -->
            <aside class="related-posts" th:if="${relatedPosts != null and !relatedPosts.isEmpty()}">
                <h4 class="mb-4">Related Posts</h4>
                <a th:each="relatedPost : ${relatedPosts}"
                   th:href="@{/posts/{id}(id=${relatedPost.id})}"
                   class="related-post-item">
                    <div class="flex-grow-1">
                        <h6 class="mb-1" th:text="${relatedPost.title}">Related Post Title</h6>
                        <small class="text-muted" th:text="${relatedPost.author?.username + ' • ' + #temporals.format(relatedPost.createdAt, 'MMM dd')}">
                            Author • Date
                        </small>
                    </div>
                    →
                </a>
            </aside>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this post? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form th:action="@{/posts/{id}/delete(id=${post.id})}" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<th:block layout:fragment="scripts">
    <script>
        // Share functions
        function shareOnTwitter() {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent(document.title);
            window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
        }

        function shareOnFacebook() {
            const url = encodeURIComponent(window.location.href);
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank');
        }

        function shareOnLinkedIn() {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent(document.title);
            window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}&title=${title}`, '_blank');
        }

        function copyToClipboard() {
            navigator.clipboard.writeText(window.location.href).then(() => {
                const btn = event.target.closest('.share-btn');
                const originalText = btn.innerHTML;
                btn.innerHTML = 'Copied!';
                setTimeout(() => {
                    btn.innerHTML = originalText;
                }, 2000);
            });
        }
    </script>
</th:block>
</body>
</html>